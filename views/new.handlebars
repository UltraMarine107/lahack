<!doctype html>

<html style="height:100%; width:100%">
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
        <link href="/css/introHCI.css" rel="stylesheet">
        <link href="/css/colorGrid.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body style="height: 100%; width: 100%">

<center><h1 style="font:Garamond">Before I die, I want to ...</h1></center>

<div>
	<button><h4>Newest</h4></button>
	<button><a href="hot"><h4>Hottest</h4></a></button>
</div>

<div class="flex-container">
{{#each posts}}
<div id="grid" style="background-color: {{color}}">
	<h3 style="color:white">{{content}}</h3>
	<form action="/like">
		<input name="like" value="{{content}}" hidden></input>
		<input name="page" value="new" hidden></input>
		<input id="img"  type="image" alt="submit" src="img/like.ico">
		<p style="float:right; font-size:16pt; color:white">
			{{likes}}</p>
		</input>
	</form>
</div>
{{/each}}
</div>

<br>

<div style="height:20%; width:100%;">
<form action="/post">
        <input id="qrBox" name="post" placeholder="Post Your Own Wish Here (Maximum 140 Characters)"></input>
        <input id="qrButton" type="submit" value="Post"></input>
</form>
</div>
</body>
</html>
